<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartupActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Welcome to SCORECARD PRO"
        android:textSize="64sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="16sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roster_button"
        android:padding="32sp"
        android:paddingLeft="32sp"
        android:paddingRight="32sp"
        android:layout_marginBottom="32sp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Game Type"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>


        <RadioGroup
            android:id="@+id/gameTypeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginBottom="32sp">

            <RadioButton
                android:id="@+id/littleLeague"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="Little League"
                android:textSize="32sp"
                android:padding="8sp"
                android:layout_weight="1"
                android:layout_marginRight="8sp"
                android:layout_marginLeft="8sp"
                android:background="@color/white"
                android:buttonTintMode="@color/white"/>

            <RadioButton
                android:id="@+id/mlb"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:text="MLB"
                android:textSize="32sp"
                android:padding="8sp"
                android:layout_weight="1"
                android:layout_marginRight="8sp"
                android:layout_marginLeft="8sp"
                android:background="@color/white"
                android:buttonTintMode="@color/white"/>

        </RadioGroup>

        <EditText
            android:id="@+id/awayTeamEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:hint="Away Team"
            android:textSize="32sp"
            android:textColorHint="@color/white"
            android:textColor="@color/blackColor"
            android:background="@drawable/gametypebutton"
            android:layout_marginBottom="16sp"/>

        <EditText
            android:id="@+id/homeTeamEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:hint="Home Team"
            android:textSize="32sp"
            android:textColorHint="@color/white"
            android:textColor="@color/blackColor"
            android:background="@drawable/gametypebutton"
            android:layout_marginBottom="32sp"/>

    </LinearLayout>


    <Button
        android:id="@+id/startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startGame"
        android:text="Start Game"
        android:textSize="32sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/roster_button"
        android:padding="16sp"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="339sp"
        tools:layout_editor_absoluteY="463sp"/>

</LinearLayout>
</ScrollView>