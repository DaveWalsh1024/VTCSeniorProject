<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartupActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Welcome to SCORECARD PRO"
        android:textSize="64dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roster_button"
        android:padding="32dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:layout_marginBottom="32dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Game Type"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"/>


        <RadioGroup
            android:id="@+id/gameTypeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <RadioButton
                android:id="@+id/littleLeague"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Little League"
                android:textSize="32dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@color/white"
                android:buttonTintMode="@color/white"/>

            <RadioButton
                android:id="@+id/mlb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="MLB"
                android:textSize="32dp"
                android:padding="8dp"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:background="@color/white"
                android:buttonTintMode="@color/white"/>

        </RadioGroup>

        <EditText
            android:id="@+id/awayTeamEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Away Team"
            android:textSize="32dp"
            android:textColorHint="@color/white"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/homeTeamEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Home Team"
            android:textSize="32dp"
            android:textColorHint="@color/white"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startGame"
        android:text="Start Game"
        android:textSize="32dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/roster_button"
        android:padding="16dp"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="339dp"
        tools:layout_editor_absoluteY="463dp"/>

</LinearLayout>
