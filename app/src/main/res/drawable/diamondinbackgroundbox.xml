<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <rotate android:fromDegrees="45">
            <shape>
                <size
                    android:width="2px"
                    android:height="2px" />
                <gradient
                    android:startColor="#00FF00"
                    android:endColor="#00FF00" />
                <stroke
                    android:width="2px"
                    android:color="#2DACA0" />
            </shape>
        </rotate>
    </item>
</layer-list>